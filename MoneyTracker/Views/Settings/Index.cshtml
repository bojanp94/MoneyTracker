@model MoneyTracker.Models.SettingsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Settings</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserLegalName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserLegalName)
                @Html.ValidationMessageFor(model => model.UserLegalName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserCurrency, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserCurrency, new SelectList(ViewBag.CurrencyList))
              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserDateOfBirth, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserDateOfBirth)
                @Html.ValidationMessageFor(model => model.UserDateOfBirth)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserGender, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserDateOfBirth, new SelectList(ViewBag.GenderList, "GenderName"))
              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

