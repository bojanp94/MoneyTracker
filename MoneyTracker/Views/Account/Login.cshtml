@model MoneyTracker.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "grid", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Use a local account to log in.</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="row">
            @Html.LabelFor(m => m.UserName, new { @class = "cell control-label" })
            <div class="input-control text">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.Password, new { @class = "cell control-label" })
            <div class="input-control password">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.RememberMe)
            <div class="input-control checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                <span class="check"></span>
            </div>
        </div>
        <div class="row">
            <div class="cell">
                <input type="submit" value="Log in" class="button primary" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Register", "Register") if you don't have a local account.
        </p>
    }
</section>


<section id="socialLoginForm">
    @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}