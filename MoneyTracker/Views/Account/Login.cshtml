@model MoneyTracker.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<hr class="bg-green">
<div class="grid">
    <div class="row cells2">
        <div class="cell">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "grid", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4>Use a local account to log in.</h4>
    
                    @Html.ValidationSummary(true)
                    <div class="row">
                        @Html.LabelFor(m => m.UserName, new { @class = "cell control-label" })
                        <div class="input-control text">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.Password, new { @class = "cell control-label" })
                        <div class="input-control password">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.RememberMe)
                        <div class="input-control checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <span class="check"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="cell">
                            <input type="submit" value="Log in" class="button success" />
                            
                        </div>
                    </div>
                    <p>
                        <a class="button primary" href="~/Account/Register">SIGN UP</a> if you don't have a local account.
                    </p>
                }
            </section>
        </div>
        <div class="cell">
            <section id="socialLoginForm">
                 @Html.Partial("_ExternalLoginsListPartial", new MoneyTracker.Models.View_Models.ExternalLoginViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl }) 
            </section>
        </div>
    </div>
</div>
<hr class="bg-green">


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}