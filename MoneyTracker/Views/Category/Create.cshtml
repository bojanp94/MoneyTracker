@model MoneyTracker.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="grid">
        <h4>Create Category</h4>
        <hr class="bg-amber"/>
        @Html.ValidationSummary(true)

        <div class="row">
            @Html.LabelFor(model => model.CategoryName, new { @class = "control-label cell" })
            <div class="input-control text">
                @Html.EditorFor(model => model.CategoryName)
            </div>
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="row">
            @Html.LabelFor(model => model.CategoryDescription, new { @class = "control-label cell" })
            <div class="input-control text">
                @Html.EditorFor(model => model.CategoryDescription)
            </div>
            @Html.ValidationMessageFor(model => model.CategoryDescription)
        </div>

        <div class="row">
            <div class="cell">
                <input type="submit" value="Create" class="button bg-amber bg-active-amber fg-white" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<hr class="bg-amber" />