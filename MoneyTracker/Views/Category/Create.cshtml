@model MoneyTracker.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="grid">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="row cells6">
            @Html.LabelFor(model => model.CategoryName, new { @class = "control-label cell" })
            <div class="cell colspan5">
                @Html.EditorFor(model => model.CategoryName)
                @Html.ValidationMessageFor(model => model.CategoryName)
            </div>
        </div>

        <div class="row cells6">
            @Html.LabelFor(model => model.CategoryDescription, new { @class = "control-label cell" })
            <div class="cell colspan5">
                @Html.EditorFor(model => model.CategoryDescription)
                @Html.ValidationMessageFor(model => model.CategoryDescription)
            </div>
        </div>

        <div class="row">
            <div class="cell">
                <input type="submit" value="Create" class="button primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
