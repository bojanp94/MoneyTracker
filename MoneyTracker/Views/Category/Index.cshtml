@model IEnumerable<MoneyTracker.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid">
    <div class="row cells6">
        <div class="cell colspan2">
            <h5>@Html.DisplayNameFor(model => model.CategoryName)</h5>
        </div>
        <div class="cell colspan4">
            <h5>@Html.DisplayNameFor(model => model.CategoryDescription)</h5>
        </div>
    </div>
    <hr />
    @foreach (var item in Model)
    {
        <div class="row cells6">
            <div class="cell colspan2">
                @Html.DisplayFor(modelItem => item.CategoryName)
            </div>
            <div class="cell colspan4">
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </div>
        </div>
    }
</div>

@Html.ActionLink("Add New Category", "Create", "Category", new { @class = "button primary" })
